<div class="container pt-2 pb-5 w-50">
  <div class="row justify-content-center">
    <div class="form">

      <!-- Photo of the book the user is recapping -->
      <div class="card_img text-center">
        <%= image_tag @book.photo_url %>
      </div>

      <!-- Titlt with name of book and author -->
      <h2 style="padding: 12px;">Add a new Recap for <%= @book.title %> by <%= @book.author %>.</h2>

      <!-- Form to create a new recap -->
      <%= simple_form_for([@recap])  do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.hidden_field :book_id, value: @book_id %>
        <div class="form-inputs">
          <%= f.input :title, lable: "What would you like to call your recap?" %>
          <%= f.input :summary %>
          <%= f.input :keypoint, label: "Key Points" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn-action" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
