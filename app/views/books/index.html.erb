<div class="container">
  <% if params[:query].present? %>
    <h1 class="text-center title-card">Your results for your search:</h1>
  <% else %>
    <h1 class="text-center title-card">All available books with recaps:</h1>
  <% end %>
  <br>
  <div class="cards">
    <% @books.each do |book| %>
      <% @recaps = Recap.where(book_id: book.id) %>
        <%= link_to book_recaps_path(:book_id => book.id), class: "a", style: "color: $black;" do %>
        <div class="card-book">
          <div class="card-image">
            <%= image_tag book.photo_url, crop: :fit %>
          </div>
          <div class="card-info">
            <h2><%= book.title %></h2>
            <p><%= book.author %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
