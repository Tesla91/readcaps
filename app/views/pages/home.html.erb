<div class="home-links mb-3">
  <ul class="nav justify-content-center">
    <li class="nav-item">
      <%= link_to "All Books", books_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Top Recaps", recaps_all_path(top: 'yes'), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "My Dashboard", dashboard_index_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "New Recap", new_recap_path, class: "nav-link" %>
    </li>
  </ul>
</div>

<div class="banner" style="background-image: url(<%= image_url "banner.png" %>);">
  <div class="banner-container">
    <h4>Welcome to</h4>
    <h1>read<em>Caps</em></h1>
    <p>Find recaps of your favorite books</p>
    <%= link_to recaps_all_path do %>
      <button class="button-action" type="submit">See all recaps</button>
    <% end %>
  </div>
</div>

<div class= "container p-6 my-4">
  <h2 class="text-center mb-2">Latest recaps:</h2>
  <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class= "container p-6 my-4">
          <div class= "row">
            <div class="recapcards col-12">
              <% @recaps = Recap.order("created_at DESC").limit(5) %>
              <%= render "shared/recapcards" %>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <div class= "container p-6 my-4">
          <div class="recapcards">
            <% @recaps = Recap.order("created_at DESC").offset(5).limit(5) %>
            <%= render "shared/recapcards" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!--Gold Silver bronze  -->


  <h2 class="text-center mb-2">Ready, Set, Gold!</h2>
   <h3 class="text-center mb-2">Our best ranked readCappers:</h3>
  <!--Best rated User through recaps  -->
  <div class = "best-ranked">
  <% @top_users.first(3).each do |t| %>
    <div class="container">
      <i class="fas fa-regular fa-trophy" style="color: #F6AE2D; font-size: 30px;"></i>
      <%= t.username %>
      <%= image_tag t.avatar, class: "recap-avatar" %>
      <i class="fas fa-star" style="color: #F6AE2D; font-size: 30px;"></i>
    </div>
  <% end %>
  </div>


