<div class="container">
  <div class="row justify-content-center">
    <div class="form col-12 col-sm-4">
      <h2>Log in to read<em>Caps</em></h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      <div class="form-check d-flex">
        <%= f.input  :remember_me, :as => :boolean, input_html: { style: "width: 15% !important" } %>
      </div>
      </div>
      <% end %>
      <p class="mt-3">Don't have an account yet? Forgot your password?</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
